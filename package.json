{
  "name": "iobroker.soundcraft",
  "version": "0.0.1",
  "description": "Adapter to controll soundcraft sound console",
  "author": "Dennion <dennion@outlook.com>",
  "homepage": "https://github.com/Dennion/ioBroker.soundcraft",
  "license": "MIT",
  "keywords": [
    "soundcraft",
    "iobroker",
    "adapter",
    "ioBroker"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dennion/ioBroker.soundcraft.git"
  },
  "engines": {
    "node": ">= 20"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.3.2",
    "rxjs": "^7.8.2",
    "soundcraft-ui-connection": "^4.0.0"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^5.0.0",
    "@alcalzone/release-script-plugin-iobroker": "^4.0.0",
    "@alcalzone/release-script-plugin-license": "^4.0.0",
    "@alcalzone/release-script-plugin-manual-review": "^4.0.0",
    "@iobroker/adapter-dev": "^1.5.0",
    "@iobroker/eslint-config": "^2.2.0",
    "@iobroker/testing": "^5.1.1",
    "@tsconfig/node20": "^20.1.6",
    "@types/node": "^24.9.2",
    "@types/proxyquire": "^1.3.31",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.39.0",
    "proxyquire": "^2.1.3",
    "rimraf": "^6.1.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "~5.0.4"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).{json,json5}",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf build",
    "build": "build-adapter ts",
    "watch": "build-adapter ts --watch",
    "prebuild:ts": "rimraf build",
    "build:ts": "build-adapter ts",
    "watch:ts": "build-adapter ts --watch",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "lint": "eslint --ext .ts src/",
    "translate": "translate-adapter",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/Dennion/ioBroker.soundcraft/issues"
  },
  "directories": {
    "test": "test"
  }
}
